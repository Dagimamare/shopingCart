     <%- include('fragments/navigation.ejs')%>


    <main>
        <h1>My Products</h1>
        <p>List of all the products...</p>
        <% for (let product of prods) {%>
        <div class="grid">
            <article class="card product-item">
                <header class="card__header">
                    <h1 class="product__title"><%= product.title%> $<%= product.price%></h1>
                </header>
                <div class="card__image">
                    <img src="<%=product.imageUrl%>" alt="A Book">
                </div>
                <div class="card__content">
                    <h2 class="product__price"><%= product.price%></h2>
                    <p class="product__description">A very interesting book about so many even more interesting things!</p>
                </div>
                <div class="card__actions">
                    <a class="btn btn-primary" href="/viewDetalPage/<%= product._id%>" role="button" > View Detail </a>
                </div>
                <div class="card__actions">
                    <a class="btn btn-primary" href="/editProduct/<%= product._id%>" role="button" > Edit </a>
                </div>

                
            <div class="card__actions">

                <form action = "/delete-product" method="POST">
                    <input type="hidden" name="id" value="<%= product._id%>">
                    <button type = "submit" class="btn btn-danger" >Delete</button>
                </form>
                <form action="/add-to-cart" method="POST">
                    <input type="hidden" name="id" value="<%=product.id%>">
                    <button type="submit" class="btn btn-primary">Add to Cart</button>
                </form>
            </div>
    
            </article>
        </div> 
       <% }%>
    </main>
